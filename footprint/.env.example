# ===========================================
# FOOTPRINT ENVIRONMENT CONFIGURATION
# ===========================================

# API Mode - set to 'true' to use mock API during development
NEXT_PUBLIC_USE_MOCK=true

# ===========================================
# UZERFLOW (Backend Platform)
# ===========================================
# Enable when Uzerflow is ready
UZERFLOW_API_URL=https://api.uzerflow.com
UZERFLOW_API_KEY=uz_your_api_key_here
UZERFLOW_APP_ID=footprint

# ===========================================
# AI IMAGE TRANSFORMATION
# ===========================================
REPLICATE_API_TOKEN=r8_your_replicate_token_here

# ===========================================
# IMAGE STORAGE (Cloudflare R2)
# ===========================================
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=footprint-images
R2_PUBLIC_URL=https://images.footprint.co.il

# ===========================================
# PAYMENTS (PayPlus)
# ===========================================
PAYPLUS_API_KEY=your_payplus_api_key
PAYPLUS_SECRET_KEY=your_payplus_secret_key

# ===========================================
# APPLICATION
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Footprint
