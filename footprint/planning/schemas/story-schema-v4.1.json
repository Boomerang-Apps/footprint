{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "wave-v2-story-schema-v4.1",
  "title": "Wave V2 Story Schema V4.1",
  "description": "AI Story Schema for Wave V2 Aerospace Safety Protocol",
  "type": "object",
  "required": ["id", "title", "type", "priority", "status", "wave", "acceptance_criteria", "technical_requirements"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Z]+-[A-Z0-9]+-[0-9]{3}$",
      "description": "Story ID format: EPIC-TYPE-NNN (e.g., UI-05A-001, BE-03-002)"
    },
    "title": {
      "type": "string",
      "minLength": 10,
      "maxLength": 100,
      "description": "Concise story title"
    },
    "type": {
      "type": "string",
      "enum": ["feature", "enhancement", "bugfix", "refactor", "test", "documentation", "security"],
      "description": "Story type classification"
    },
    "priority": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low"],
      "description": "Implementation priority"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "ready", "in_progress", "blocked", "review", "completed", "cancelled"],
      "description": "Current story status"
    },
    "wave": {
      "type": "integer",
      "minimum": 1,
      "description": "Wave number assignment"
    },
    "epic": {
      "type": "string",
      "description": "Parent epic identifier"
    },
    "description": {
      "type": "string",
      "description": "Detailed story description"
    },
    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "criterion", "ears_format"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^AC-[0-9]{2}$"
          },
          "criterion": {
            "type": "string",
            "description": "Human-readable acceptance criterion"
          },
          "ears_format": {
            "type": "string",
            "pattern": "^WHEN .+ THEN .+$",
            "description": "EARS syntax: WHEN {trigger} THEN {behavior} [threshold: {metric}]"
          },
          "threshold": {
            "type": "string",
            "description": "Optional performance threshold"
          }
        }
      }
    },
    "technical_requirements": {
      "type": "object",
      "required": ["files_to_create", "files_to_modify"],
      "properties": {
        "files_to_create": {
          "type": "array",
          "items": { "type": "string" }
        },
        "files_to_modify": {
          "type": "array",
          "items": { "type": "string" }
        },
        "dependencies": {
          "type": "array",
          "items": { "type": "string" }
        },
        "api_endpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "method": { "type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
              "path": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        },
        "database_changes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "testing_requirements": {
      "type": "object",
      "properties": {
        "unit_tests": {
          "type": "array",
          "items": { "type": "string" }
        },
        "integration_tests": {
          "type": "array",
          "items": { "type": "string" }
        },
        "e2e_tests": {
          "type": "array",
          "items": { "type": "string" }
        },
        "coverage_target": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "hazard_analysis": {
      "type": "object",
      "properties": {
        "identified_hazards": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "description": { "type": "string" },
              "severity": { "type": "string", "enum": ["catastrophic", "critical", "major", "minor"] },
              "likelihood": { "type": "string", "enum": ["frequent", "probable", "occasional", "remote", "improbable"] },
              "mitigation": { "type": "string" }
            }
          }
        },
        "rollback_procedure": {
          "type": "string"
        }
      }
    },
    "traceability": {
      "type": "object",
      "properties": {
        "requirements": {
          "type": "array",
          "items": { "type": "string" }
        },
        "depends_on": {
          "type": "array",
          "items": { "type": "string" }
        },
        "blocks": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "assigned_agent": {
      "type": "string",
      "enum": ["fe-dev", "be-dev", "qa", "pm", "cto"],
      "description": "Assigned implementation agent"
    },
    "gates_completed": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["gate-0", "gate-1", "gate-2", "gate-3", "gate-4", "gate-5", "gate-6", "gate-7"]
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": { "type": "string", "format": "date-time" },
        "updated_at": { "type": "string", "format": "date-time" },
        "created_by": { "type": "string" },
        "estimated_effort": { "type": "string" }
      }
    }
  }
}
